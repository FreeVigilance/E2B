{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "target": "ES6",
    "lib": [
      "DOM",
      "ES6",
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "build",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@src/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "index.d.ts",
  ]
}